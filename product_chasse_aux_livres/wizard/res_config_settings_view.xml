<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="product.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@id='companies']" position="after">
            <h2>Chasse aux Livres</h2>
            <div class="row mt16 o_settings_container" id="chasse_aux_livres_settings">
                <div class="col-12 col-lg-6 o_setting_box" id="chasse_aux_livres_setting">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <field name="chasse_aux_livres_default_product_categ_id"/>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
</record>

</odoo>
